<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonRecord">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonRecord.RecordBackground">
        <item name="android:background">@drawable/bg_button_record</item>
        <item name="android:paddingStart">@dimen/fragment_horizontal_margin</item>
        <item name="android:paddingEnd">@dimen/fragment_horizontal_margin</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonRecord.DeleteBackground">
        <item name="android:background">@drawable/bg_button_delete</item>
        <item name="android:padding">@dimen/fragment_half_vertical_margin</item>
    </style>

    <style name="ButtonHeat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/fragment_horizontal_margin</item>
        <item name="android:paddingEnd">@dimen/fragment_horizontal_margin</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/bg_button_record</item>
        <item name="android:layout_marginTop">@dimen/fragment_half_vertical_margin</item>
    </style>

</resources>
